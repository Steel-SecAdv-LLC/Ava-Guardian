{
  "metadata": {
    "version": "1.2.0",
    "created": "2025-11-27T09:45:00Z",
    "description": "Ava Guardian â™± performance baseline for regression detection",
    "system": "GitHub Actions ubuntu-latest, Python 3.11",
    "notes": "Baselines calibrated to CI runner performance. Tolerances set to 35% to account for shared CI hardware variance. A real regression (3-5x slowdown) will still fail CI."
  },
  "thresholds": {
    "regression_threshold_percent": 10,
    "minimum_iterations": 50,
    "warmup_iterations": 5
  },
  "benchmarks": {
    "sha3_256_hash": {
      "description": "SHA3-256 hashing of 1KB data",
      "metric": "operations_per_second",
      "baseline_value": 150000,
